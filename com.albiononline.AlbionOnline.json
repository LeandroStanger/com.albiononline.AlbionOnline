{
    "app-id": "com.albiononline.AlbionOnline",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "albion-online",
    "tags": ["proprietary"],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--persist=.albiononline",
        "--extra-data=albion-online-setup:6a27443b66386e1f2f037667ab9b3c6eef50b5f08105289d43c253708fcdc4ce:68848539::https://live.albiononline.com/clients/20170616104311/albion-online-setup"
    ],
    "modules": [
        "shared-modules/udev/udev-175.json",
        {
            "name": "alsa-lib",
            "config-opts": [ "--disable-aload", "--disable-alisp",
                             "--disable-old-symbols",
                             "--with-pcm-plugins=hw ioplug extplug"],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://pkgs.fedoraproject.org/repo/pkgs/alsa-lib/alsa-lib-1.1.3.tar.bz2/eefe5992567ba00d6110a540657aaf5c/alsa-lib-1.1.3.tar.bz2",
                    "sha256": "71282502184c592c1a008e256c22ed0ba5728ca65e05273ceb480c70f515969c"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [ "autoreconf -i" ]
                }
            ]
        },
        {
            "name": "sndio",
            "config-opts": ["CFLAGS=-I/app/include",
                            "LDFLAGS=-L/app/lib"],
            "sources": [
                {
                    "type": "archive",
                    "url" : "http://www.sndio.org/sndio-1.2.0.tar.gz",
                    "sha256": "b9808e189481904a4404b0c1715ad0c4b301e72abca8e49653bb526ff4e16cdc"
                }
            ]
        },
        {
            "name": "albion-online",
            "buildsystem": "simple",
            "build-commands": [
                "gcc -W -Wall splitelf.c -o splitelf",
                "install -D splitelf /app/bin/splitelf",
                "install -D albion-online /app/bin/albion-online",
                "install -D apply_extra /app/bin/apply_extra",
                "install -Dm644 com.albiononline.AlbionOnline.appdata.xml /app/share/appdata/com.albiononline.AlbionOnline.appdata.xml",
                "install -Dm644 com.albiononline.AlbionOnline.desktop /app/templates/com.albiononline.AlbionOnline.desktop",
                "ln -s /lib/libdl.so.2 /app/lib/libdl.so"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "splitelf.c"
                },
                {
                    "type": "file",
                    "path": "albion-online.sh",
                    "dest-filename": "albion-online"
                },
                {
                    "type": "file",
                    "path": "apply_extra.sh",
                    "dest-filename": "apply_extra"
                },
                {
                    "type": "file",
                    "path": "com.albiononline.AlbionOnline.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.albiononline.AlbionOnline.desktop"
                }
            ]
        }
    ]
}

